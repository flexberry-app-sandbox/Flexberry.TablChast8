<h3 class="ui header">{{t "forms.i-i-s-tabl-chast8-школа-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.назв
      class=(if (v-get validationModel "назв" "isInvalid") "error")
      label=(t "forms.i-i-s-tabl-chast8-школа-e.назв-caption")
      data-test-i-i-s-tabl-chast8-школа-e-назв=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "назв" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-tabl-chast8-школа-e.ученик-caption"}}</label>
    {{flexberry-groupedit
      componentName="ученикGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.ученик
      content=model.ученик
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "ученик" "isInvalid") "error")
      data-test-i-i-s-tabl-chast8-школа-e-ученик=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ученик" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-tabl-chast8-школа-e.учитель-caption"}}</label>
    {{flexberry-groupedit
      componentName="учительGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.учитель
      content=model.учитель
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "учитель" "isInvalid") "error")
      data-test-i-i-s-tabl-chast8-школа-e-учитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "учитель" "message")}}
  </div>
</form>
